<div id="signup">
  <div class="container">
    <div class="signup-form">
      <div class="logo">
        <div class="logo-icon">
          <!-- <i class="chatkin-icon icon-logo-chatkin"></i> -->
          <i class="chatkin-icon icon-logo-chatkin"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span></i>
        </div>
        <h1>Sign up</h1>
      </div>
      <form class="form" v-on:submit.prevent="submitSignupForm">
        <div class="form-group">
          <label for="signup_username">Username</label>
          <input class="form-control input-lg" id="signup_username" type="text" v-model="username">
        </div>
        <div class="form-group">
          <label for="signup_password">Password</label>
          <input class="form-control input-lg" id="signup_password" type="password" v-model="password">
        </div>
        <div class="form-group">
          <label for="signup_password-confirmation">Confirm password</label>
          <input class="form-control input-lg" id="signup_password-confirmation" type="password" v-model="passwordConfirmation">
        </div>
        <div class="form-group">
          <label for="signup_password-confirmation">Your avatar:</label>
          <div class="avatar-section">
            <!-- <i class="avatar chatkin-icon icon-logo-chatkin" :style="{color: randomizedColor}"></i> -->
            <i class="avatar chatkin-icon icon-logo-chatkin" :style="{color: randomizedColor}"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span></span></i>
            <a class="btn btn-xs btn-primary" v-on:click="changeColor">Change color</a>
          </div>
        </div>
        <div v-if="passwordMatchError">
          <p>Your password confirmation doesn't match the password you entered.</p>
        </div>
        <div v-if="usernameTaken">
          <p>That username is already taken. Please try another.</p>
        </div>
        <button class="btn submit btn-lg btn-block btn-success" type="submit">
          <span v-if="isSyncing">Signing up...</span>
          <span v-else>Sign up</span>
        </button>
      </form>
    </div>
  </div>
</div>
