<div id="signup">
  <div class="container">
    <div class="jumbotron">
      <h1>Sign up</h1>
      <form class="form" v-on:submit.prevent="submitSignupForm">
        <div class="form-group">
          <label for="signup_username">Username</label>
          <input class="form-control input-lg" id="signup_username" type="text" v-model="username">
        </div>
        <div class="form-group">
          <label for="signup_password">Password</label>
          <input class="form-control input-lg" id="signup_password" type="password" v-model="password">
        </div>
        <button class="btn btn-lg btn-block btn-primary" type="submit">
          <span v-if="isSyncing">Signing up...</span>
          <span v-else>Sign up</span>
        </button>
      </form>
    </div>
  </div>
</div>
